---
import BaseLayout from "../layouts/BaseLayout.astro";
import { career } from "../data/career";
---

<BaseLayout title="Career" description="経歴">
  <div class="space-y-8">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Career</h1>
      <p class="mt-2 text-muted-foreground">経歴・職歴</p>
    </div>

    <div class="relative space-y-8 before:absolute before:left-0 before:top-2 before:bottom-0 before:w-px before:bg-border sm:before:left-[7.5rem]">
      {career.map((entry) => (
        <div class="relative grid gap-1 pl-6 sm:grid-cols-[7.5rem_1fr] sm:gap-8 sm:pl-0">
          <div class="absolute left-0 top-2 size-2 rounded-full bg-foreground sm:left-[7rem]"></div>
          <p class="text-sm font-medium text-muted-foreground sm:text-right">
            {entry.period}
          </p>
          <div class="space-y-1">
            <h3 class="font-semibold">{entry.company}</h3>
            <p class="text-sm text-muted-foreground">{entry.role}</p>
            <p class="text-sm leading-relaxed text-muted-foreground">
              {entry.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
